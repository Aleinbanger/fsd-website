mixin button({ btnType='button', btnText='', withArrow=false, btnStyle })
  -
    const blockName = 'button';
    attributes.class = [blockName];
    const iconClass = ['material-icons', `${blockName}__arrow`];
    let btnTag;

  if (btnStyle)
    each style in btnStyle.split(' ')
      - attributes.class.push(`${blockName}_${style}`)

  case btnType
    when 'link'
      - btnTag = 'a'
    default
      - btnTag = 'button'
      - attributes.type = btnType

  #{btnTag}&attributes(attributes) #{btnText}
    if (withArrow)
      i(class=iconClass) arrow_forward
